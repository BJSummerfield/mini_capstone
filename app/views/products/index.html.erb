<h1>Products</h1>

<% @products.each do |product| %>
  <p>id: <%= product.id %></p>
  <p>name: <a href="/products/<%=product.id%>"><%= product.name %></a></p>
  <p>price: <%= product.price %></p>
  <p>description: <%= product.description %></p>
  <p>supplier: <%= product.supplier[:name] %></p>
  <img src="<%= product.image_url[0][:url]%>" width = "100">
  <hr>
<% end %>
